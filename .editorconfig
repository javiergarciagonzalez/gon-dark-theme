root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[{*.mk,Makefile}]
indent_style = tab

[package.json]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.md]
trim_trailing_whitespace = false